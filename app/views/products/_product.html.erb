<!-- app/views/products/_product.html.erb -->
<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url, alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= number_to_currency(product.price) %></span>
    </h1>
  <% end %>
  <div>
    <% if product.quantity == 0 %>
      <button class="btn btn-danger soldout" disabled>Sold Out</button>
    <% end %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-success', method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
  </div>
</article>